{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "target": "ES2020",                // ES2020 works well for Node.js
    "module": "CommonJS",              // CommonJS for Node.js (instead of nodenext)
    "lib": ["ES2020"],                 // Node.js runtime libraries
    "types": ["node"],                 // Add Node.js type definitions

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "esModuleInterop": true,           // Needed for `import express from "express"`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                  // Only compile files in src
  "exclude": ["node_modules", "dist"]  // Ignore build output
}
